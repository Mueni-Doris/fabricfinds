generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cart {
  id          Int    @id @default(autoincrement())
  description String @db.VarChar(100)
  price       String @db.VarChar(100)
  image       String @db.VarChar(100)
  quantity    String @db.VarChar(20)
  email       String @db.VarChar(200)
  clothe_id   String @db.VarChar(200)
}

model clothes {
  id          Int     @id
  description String  @db.Text
  category    String  @db.VarChar(50)
  price       Decimal @db.Decimal(10, 2)
  image       String  @db.Text
  created_at  DateTime @default(now())

}

model order_items {
  order_item_id Int       @id
  order_id      Int
  product_id    Int
  quantity      Int
  price         Decimal   @db.Decimal(10, 2)
  product_image String    @db.VarChar(255)
  status        String    @db.VarChar(255)
  delivery      String    @db.VarChar(200)
  date_created  DateTime? @default(now()) @db.Timestamp(0)

  @@index([order_id], map: "order_id")
  @@index([product_id], map: "product_id")
}

model orders {
  order_id   Int       @id
  user_id    String    @db.VarChar(200)
  name       String    @db.VarChar(255)
  email      String    @db.VarChar(255)
  address    String    @db.VarChar(255)
  phone      String    @db.VarChar(15)
  created_at DateTime? @default(now()) @db.Timestamp(0)
}

model User {
  id             String   @id @default(cuid())
  full_name      String
  phone_number   String
  username       String   @unique
  email          String   @unique
  location       String
  password       String
  createdAt      DateTime @default(now())
}

